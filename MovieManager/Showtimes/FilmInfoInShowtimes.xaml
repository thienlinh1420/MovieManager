<UserControl x:Class="MovieManager.Showtimes.FilmInfoInShowtimes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="980">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MovieManager;component/Resources/Styles/ButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border BorderBrush="Black"
            BorderThickness="0,0,0,1">
        <Grid>
            <TextBlock x:Name="tblTittle" 
                   Margin="0,24,0,150" 
                   FontSize="18" Height="25" 
                   Padding="20,0,0,0"/>
            <Image x:Name="imgPoster" 
               Width="120" 
               Height="120" Margin="8,56,852,24"/>
            <StackPanel x:Name="pnTime" 
                    Margin="210,0,0,0" 
                    VerticalAlignment="Center" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left">

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
